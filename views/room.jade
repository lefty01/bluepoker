extends layout

block content
	div#preGame
		h1(data-room="#{room}") Real Time Planning Poker
		p.lead
			| Planning Poker is a way to estimate a relative effort for a given task.
			br
			| This implementation was build upon new technologies such as NodeJS, Socket.IO...
			br
			br
			a#shareLink(href='/room/#{room}') Share the link to your collaborators ➔
			br

		button#getPlanning.btn.btn-success.btn-lg.btn-block(type='button') Get planning !

		div#qrCode

	div#game.row
		div.col-md-10.clearfix
			h2#userStory User Story
			form#userStoryForm
				.input-group
					span.input-group-addon ✍
					input.form-control(type='text', placeholder='User story', autofocus)

			div#progressBarArea
				div#progressBar.progress.progress-striped.active
					div.progress-bar(role='progressbar', aria-valuenow='0', aria-valuemin='0', aria-valuemax='100', style='width: 0%')
					
			div#cardsSelection.row
				div.col-md-1.col-xs-2
					button.btn.btn-default.cardSelection(type='button') 0
				div.col-md-1.col-xs-2
					button.btn.btn-default.cardSelection(type='button') 1/2
				div.col-md-1.col-xs-2
					button.btn.btn-default.cardSelection(type='button') 1
				div.col-md-1.col-xs-2
					button.btn.btn-default.cardSelection(type='button') 2
				div.col-md-1.col-xs-2
					button.btn.btn-default.cardSelection(type='button') 3
				div.col-md-1.col-xs-2
					button.btn.btn-default.cardSelection(type='button') 5
				div.col-md-1.col-xs-2
					button.btn.btn-default.cardSelection(type='button') 8
				div.col-md-1.col-xs-2
					button.btn.btn-default.cardSelection(type='button') 13
				div.col-md-1.col-xs-2
					button.btn.btn-default.cardSelection(type='button') 20
				div.col-md-1.col-xs-2
					button.btn.btn-default.cardSelection(type='button') 40
				div.col-md-1.col-xs-2
					button.btn.btn-default.cardSelection(type='button') 100
				div.col-md-1.col-xs-2
					button.btn.btn-default.cardSelection(type='button') ?

			ul#cardsResult

		div.col-md-2 
			ul#participants.list-group

			button#switchGame.btn.btn-info.btn-block(type='button')
				i.fa.fa-external-link
				| Share link

	div#chat.hidden-xs
		div#chatTitle
			p Chat 
				i.fa.fa-volume-up.muteButton
		div#chatContent
			ul
		div#chatInput
			textarea
	div#chatHidden.hidden-xs
		p Chat

	div#alerts

block footer

block append scripts
	script(src='/js/main.js?v=#{cacheBuster}')